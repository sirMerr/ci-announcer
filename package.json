{
  "name": "ci-announcer",
  "version": "1.0.0",
  "description": "Probot app which reports failing builds on PRs with error logs",
  "author": "Tiffany Le-Nguyen <letiffany.nguyen@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/sirMerr/ci-announcer.git",
  "homepage": "https://github.com/sirMerr/ci-announcer",
  "bugs": "https://github.com/sirMerr/ci-announcer/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "precommit": "pretty-quick --staged",
    "start:watch": "nodemon --exec \"npm start\" --watch src --watch index.ts --ignore build",
    "start": "npm build && probot run ./build/index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "http": "^0.0.0",
    "probot": "^7.0.0-typescript.4",
    "strip-ansi": "^4.0.0",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "@types/node-fetch": "^2.1.1",
    "@types/strip-ansi": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.17.2",
    "prettier": "^1.13.5",
    "pretty-quick": "^1.6.0",
    "smee-client": "^1.0.1",
    "standard": "^10.0.3",
    "ts-jest": "^22.4.6"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.+(ts|tsx|js)"
    ]
  }
}
